---
// In your app's main layout or global CSS
import "prismjs/themes/prism-tomorrow.css";

interface Props {
  title?: string;
}
const { title = "Shuriken Documentation" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Shuriken-doc/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- âœ… Add Shiki syntax highlighting styles -->
    <style>
      pre {
        background: #1e1e1e;
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
      }
      code {
        font-family: "Fira Code", monospace;
        color: #ffffff;
      }
    </style>
  </head>
  <body>
    <div class="min-h-screen bg-gray-50">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

